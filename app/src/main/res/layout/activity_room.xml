<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Room code input group -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Code:"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/roomCodeInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Room Code"
            android:inputType="text"/>
    </LinearLayout>

    <!-- Number of members input group -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Members:"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/membersInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter number of members"
            android:inputType="number"
            android:text="2"/>
    </LinearLayout>

    <!-- Room time input group -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time (min):"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/roomTimeInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter room time in minutes"
            android:inputType="number"
            android:text="30"/>
    </LinearLayout>

    <!-- Join room button -->
    <Button
        android:id="@+id/joinRoomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Room"
        android:layout_marginBottom="16dp"/>

    <!-- Create room button -->
    <Button
        android:id="@+id/createRoomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Room"/>

</LinearLayout>
